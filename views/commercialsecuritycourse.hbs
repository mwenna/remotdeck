  <script>
  const startButton = document.getElementById('start-btn')
  const nextButton = document.getElementById('next-btn')
  const questionContainerElement = document.getElementById('question-container')
  const questionElement = document.getElementById('question')
  const answerButtonsElement = document.getElementById('answer-buttons')

  let shuffledQuestions, currentQuestionIndex

  startButton.addEventListener('click', startGame)
  nextButton.addEventListener('click', () => {
    currentQuestionIndex++
    setNextQuestion()
  })

  function startGame() {
    startButton.classList.add('hide')
    shuffledQuestions = questions.sort(() => Math.random() - .5)
    currentQuestionIndex = 0
    questionContainerElement.classList.remove('hide')
    setNextQuestion()
  }

  function setNextQuestion() {
    resetState()
    showQuestion(shuffledQuestions[currentQuestionIndex])
  }

  function showQuestion(question) {
    questionElement.innerText = question.question
    question.answers.forEach(answer => {
      const button = document.createElement('button')
      button.innerText = answer.text
      button.classList.add('btn')
      if (answer.correct) {
        button.dataset.correct = answer.correct
      }
      button.addEventListener('click', selectAnswer)
      answerButtonsElement.appendChild(button)
    })
  }

  function resetState() {
    clearStatusClass(document.body)
    nextButton.classList.add('hide')
    while (answerButtonsElement.firstChild) {
      answerButtonsElement.removeChild(answerButtonsElement.firstChild)
    }
  }

  function selectAnswer(e) {
    const selectedButton = e.target
    const correct = selectedButton.dataset.correct
    setStatusClass(document.body, correct)
    Array.from(answerButtonsElement.children).forEach(button => {
      setStatusClass(button, button.dataset.correct)
    })
    if (shuffledQuestions.length > currentQuestionIndex + 1) {
      nextButton.classList.remove('hide')
    } else {
      startButton.innerText = 'Did you answer all the questions correctly? Click to try again!'
      startButton.classList.remove('hide')
    }
  }

  function setStatusClass(element, correct) {
    clearStatusClass(element)
    if (correct) {
      element.classList.add('correct')
    } else {
      element.classList.add('wrong')
    }
  }

  function clearStatusClass(element) {
    element.classList.remove('correct')
    element.classList.remove('wrong')
  }

  const questions = [
    {
      question: 'What is ransomware?',
      answers: [
        { text: 'A type of malware that attacks computer networks and mobile devices', correct: true },
        { text: 'Software used to protect your device from harmful viruses', correct: false },
        { text: 'Equipment that cyber-attackers attempt to steal and don’t return until you pay them money', correct: false },
        { text: 'A form of crypto currency', correct: false }
      ]
    },
    {
      question: 'Take a look at picture A below, what should you do first if you receive this notification on your device?',
      answers: [
        { text: 'Re-start your computer', correct: true },
        { text: 'Disconnect from the network', correct: false },
        { text: 'Turn off your computer',  correct: true },
        { text: 'Report it to IT service desk', correct: false }
      ]
    },
    {
      question: 'Which of the following is the definition of “phishing”?',
      answers: [
        { text: 'A form of scam email or message that contains a false link', correct: true },
        { text: 'A sort of virus that threatens the victims data', correct: false }
      ]
    },
    {
      question: 'If you receive an email, what are some ways to recognize and avoid phishing emails?',
      answers: [
        { text: 'Beware of online requests for personal information', correct: false },
        { text: 'Check the email address ', correct: false },
        { text: 'Watch for spelling mistakes', correct: false },
        { text: 'All of these', correct: true }
      ]
    },
    {
      question: 'Take a look at image B below. You’ve received a fax! Do you think the following message is phishing or legitimate? HINT: Take note of the email which is misspelled. ',
      answers: [
        { text: 'Phishing', correct: true },
        { text: 'Legitimate', correct: false }
      ]
    },
    {
      question: 'What is the best defence against Ransomware?',
      answers: [
        { text: 'Don’t click unverified links or open unverified attachments', correct: false },
        { text: 'Use Strong, Unique Passwords', correct: false },
        { text: 'Back up your information', correct: true },
        { text: 'Don’t visit unsecured websites (HTTP://)', correct: false }
      ]
    }
  ]

